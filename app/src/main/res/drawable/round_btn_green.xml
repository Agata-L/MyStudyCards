<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="40dip" />
            <stroke
                android:width="1dip"
                android:color="#428C10" />
            <gradient
                android:angle="-90"
                android:startColor="#428C10"
                android:endColor="#56B615" />
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="40dip" />
            <stroke
                android:width="1dip"
                android:color="#428C10" />
            <solid
                android:color="#428C10"/>
        </shape>
    </item>
</selector>