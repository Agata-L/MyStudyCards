<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="40dip" />
            <stroke
                android:width="1dip"
                android:color="#785E7C" />
            <gradient
                android:angle="-90"
                android:startColor="#3F2942"
                android:endColor="#9766A0" />
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="40dip" />
            <stroke
                android:width="1dip"
                android:color="#583A60" />
            <solid
                android:color="#583A60"/>
        </shape>
    </item>
</selector>